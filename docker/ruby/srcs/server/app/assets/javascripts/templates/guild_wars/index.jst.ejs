<div id="users-index">
    <% if (guild.war == null) { %>
    <% if (Transcendence.current_user.toJSON().id == guild.owner) { %>
    <div class="create-chatroom">
        <a href="#guild_wars/new"><button class="create">Start a War</button></a>
    </div>
    <% } else { %>
        Ask to your owner to launch a guildwar !
    <% } %>
    <% if (Transcendence.current_user.toJSON().id == guild.owner) { %>
    <table>
    <tr>
        <th colspan="7">Current Guild Wars request</th>
    </tr>
    <% Transcendence.guilds.each(function(model) { %>
        <% Transcendence.guild_wars.each(function(bob) { %>
        <% if ((bob.escape('guild_one_id') == model.escape('id')) && (bob.escape('guild_two_id') == guild.id) && (bob.escape('pending') == 'true')) { %>
            <tr class="users-list">
                <td style="width:15%;font-size: 30px;font-family: Georgia, 'Times New Roman', Times, serif"><b><%= model.escape('name') %></b></td>
                <td style="width:15%;font-size: 30px;font-family: Georgia, 'Times New Roman', Times, serif"><b><%= model.escape('anagram') %></b></td>  
                <td style="width:15%;font-size: 30px;font-family: Georgia, 'Times New Roman', Times, serif"><b><%= model.escape('points') %></b></td>
                <td><div class="create-chatroom">
                    <button class="delete" onclick='$("#leave-modal").show()'>Accept</button>
                    <div id="leave-modal" class="modal">
                        <div class="modal-content">
                            <span id="close" onclick='$("#leave-modal").hide()'>&times;</span><br />
                            <div class="modal-header">
                                Are you sure ?
                            </div>
                            <form action="/api/guild_wars/accept_request/<%= bob.escape('id') %>" accept-charset="UTF-8" method="post"
                                    data-remote="true">
                                <div class="modal-body">
                                    <p style="width:15%;font-size: 20px;font-family: Georgia, 'Times New Roman', Times, serif; margin: auto;"><b>Prize :  <%= bob.escape('prize') %></b></p>
                                    <p style="width:15%;font-size: 20px;font-family: Georgia, 'Times New Roman', Times, serif; margin: auto;"><b>Duels : <%= bob.escape('duels') %></b></p>
                                    <p style="width:15%;font-size: 20px;font-family: Georgia, 'Times New Roman', Times, serif; margin: auto;"><b> Ladder : <%= bob.escape('ladder') %></b></p>
                                    <p style="width:15%;font-size: 20px;font-family: Georgia, 'Times New Roman', Times, serif; margin: auto;"><b> Faster : <%= bob.escape('faster') %></b></p>
                                    <p style="width:15%;font-size: 20px;font-family: Georgia, 'Times New Roman', Times, serif; margin: auto;"><b> Giant : <%= bob.escape('giant') %></b></p>
                                    <p style="width:15%;font-size: 20px;font-family: Georgia, 'Times New Roman', Times, serif; margin: auto;"><b> Reverse : <%= bob.escape('reverse') %></b></p>
                                    <input type="hidden" name="pending" value="false">
                                    <input type="hidden" name="_method" value="put">
                                    <button name="button" type="submit" class="button-password" onclick='$("#leave-modal").hide()'>Accept</button>
                                    <input type="hidden" name="authenticity_token"
                                        value="<%= $(`meta[name='csrf-token']`).attr('content') %>">
                                </div>
                            </form>
                        </div>
                    </div>
                </div></td>
                <td class="users-action"> 
                    <form action="/api/guild_wars/<%= bob.escape('id') %>" method="post" data-remote="true" id="send-pm"
                        class="<%= model.escape('id') %>">
                        <button type="submit" class="menu-option">Refuse</button>
                        <input type="hidden" name="_method" value="delete">
                        <input value="true" type="hidden" name="pending">
                        <input type="hidden" name="authenticity_token" value="<%= $(`meta[name='csrf-token']`).attr('content') %>">
                    </form>
                </td>
            </tr>
        <% }})}) %>
    </table>
    <% } else { %>
        <% Transcendence.guild_wars.each(function(model) { %>
            <% if (guild.war == model.escape('id')) { %>
                Current War !
                <p style="width:15%;font-size: 20px;font-family: Georgia, 'Times New Roman', Times, serif; margin: auto;"><b>Guild 1 points :  <%= model.escape('guild_one_points') %></b></p>
                <p style="width:15%;font-size: 20px;font-family: Georgia, 'Times New Roman', Times, serif; margin: auto;"><b>Guild 2 points :  <%= model.escape('guild_two_points') %></b></p>
                <p style="width:15%;font-size: 20px;font-family: Georgia, 'Times New Roman', Times, serif; margin: auto;"><b>Prize :  <%= model.escape('prize') %></b></p>
                <p style="width:15%;font-size: 20px;font-family: Georgia, 'Times New Roman', Times, serif; margin: auto;"><b>Duels : <%= model.escape('duels') %></b></p>
                <p style="width:15%;font-size: 20px;font-family: Georgia, 'Times New Roman', Times, serif; margin: auto;"><b> Ladder : <%= model.escape('ladder') %></b></p>
                <p style="width:15%;font-size: 20px;font-family: Georgia, 'Times New Roman', Times, serif; margin: auto;"><b> Faster : <%= model.escape('faster') %></b></p>
                <p style="width:15%;font-size: 20px;font-family: Georgia, 'Times New Roman', Times, serif; margin: auto;"><b> Giant : <%= model.escape('giant') %></b></p>
                <p style="width:15%;font-size: 20px;font-family: Georgia, 'Times New Roman', Times, serif; margin: auto;"><b> Reverse : <%= model.escape('reverse') %></b></p>
        <% }}) %>
    <% }} %>
</div>