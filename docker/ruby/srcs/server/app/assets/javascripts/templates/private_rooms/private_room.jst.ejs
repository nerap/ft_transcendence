<div id="private-room">
    <div id="pr-content">
        <div id="pm-header">Discussion with <%= (pr.user1 == Transcendence.current_user.id) ? Transcendence.users.get(pr.user2).toJSON().username : Transcendence.users.get(pr.user1).toJSON().username %></div>
        <div id="private-messages"></div>
        <div id="send-private-message">
            <form action="/api/private_messages" accept-charset="UTF-8" data-remote="true" method="post">
                <input type="hidden" name="authenticity_token" value="<%= $(`meta[name='csrf-token']`).attr('content') %>">
                <table>
                    <tr>
                        <td class="text"><input placeholder="New message..." autocomplete="off" type="text"
                                class="text-field" id="text-field" required="required" name="pm[message]"></td>
                        <td class="button"><input type="submit" value="Send" class="button-field"
                                data-disable-with="Send" name="commit"></td>
                    </tr>
                </table>
                <input value="<%= Transcendence.current_user.id %>" type="hidden" name="pm[user_id]">
                <input value="<%= pr.id %>" type="hidden" name="pm[private_room_id]">
            </form>
        </div>
    </div>
    <%= pr.user1 %>
    <%= pr.user2 %>
    <a href="/api/private_rooms/<%= pr.id %>" data-method="delete" rel="nofollow">Destroy</a>
</div>