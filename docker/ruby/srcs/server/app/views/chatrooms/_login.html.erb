<div id="password-modal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span><br/>
        <div class="modal-header">
            <img class="padlock-image" src="/assets/padlock.png"><br/>
            <%= chatroom.name %> is locked by a password
        </div>
        <%= form_for(chatroom, url: login_chatroom_path(chatroom), html: { method: :post }) do |form| %>
            <div class="modal-body">
                <%= form.hidden_field :chatroom_id, value: chatroom.id %>
                <%= form.password_field :chatroom_password, placeholder: "Enter password...", class: "password-field", value: nil %><%= form.button "Join", class: "button-password" %>
            </div>
        <% end %>
    </div>
</div>
