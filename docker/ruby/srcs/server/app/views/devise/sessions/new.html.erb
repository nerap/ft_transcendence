<div id="edit-panel">
  <div class="header">
    <h1>Sign in</h1>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      Email<br/>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      Password<br/>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %> Remember me
      </div>
    <% end %>

    <div class="field">
      OTP<br/>
      <%= f.text_field :otp_attempt, autocomplete: nil, placeholder: "Ignore if not enabled..." %>
    </div>

    <div class="actions">
      <%= f.submit "Log in", class: "edit save" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>